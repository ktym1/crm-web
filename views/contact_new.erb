<h1> Create a New Contact </h1>

<form action="/contacts" method="post">
	<form class="pure-form pure-form-stacked">

	<fieldset>
		<legend> Please input the Contact's information </legend>

	<label for="First Name">First Name</label>
	
	<input type= "text" name="first_name" id="First Name" autofocus required>
	
	<label for="Last Name">Last Name</label>
	
	<input type= "text" name="last_name" id="Last Name" autofocus required>
	
	<label for="Email">Email</label>

	<input type= "text" name="email" id="Email" autofocus required>
	
	<label for="Role">Role</label>
	
	<input type= "text"	name="role" id="Role"autofocus required>
	
	<label for="Submit"></label>
	<input type= "submit" class="pure-button pure-button-primary" name="Submit" id="Submit" autofocus required>

</fieldset>
</form>
